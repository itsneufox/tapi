{
  "name": "tapi",
  "version": "1.0.0",
  "description": "CLI tool for open.mp/SA-MP development that helps manage packages and build PAWN projects. ",
  "keywords": [
    "pawn",
    "samp",
    "openmp",
    "package-manager",
    "build-tool"
  ],
  "homepage": "https://github.com/itsneufox/tapi#readme",
  "bugs": {
    "url": "https://github.com/itsneufox/tapi/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsneufox/tapi.git"
  },
  "license": "MIT",
  "author": "itsneufox",
  "type": "commonjs",
  "main": "dist/index.js",
  "bin": {
    "tapi": "bin/tapi.js"
  },
  "scripts": {
    "prebuild": "node scripts/prebuild.js",
    "copy-templates": "node scripts/copy-templates.js",
    "build": "tsc && npm run copy-templates",
    "start": "ts-node src/index.ts",
    "dev": "npm run build && npm link",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "format": "prettier --write src/**/*.ts",
    "dev:stop": "npm unlink -g tapi || true",
    "dev:restart": "npm run dev:stop && npm run dev",
    "build:executable": "node installer/build-executable.js",
    "build:installer": "npm run build:executable && echo Run 'iscc installer/tapi-setup.iss' to create Windows installer",
    "build:distribution": "node installer/create-distribution.js"
  },
  "pkg": {
    "targets": [
      "node18-win-x64",
      "node18-linux-x64", 
      "node18-macos-x64"
    ],
    "outputPath": "binaries",
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "dist/templates/**/*"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "^7.4.0",
    "@octokit/rest": "^21.1.1",
    "@types/adm-zip": "^0.5.7",
    "@types/tar": "^6.1.13",
    "adm-zip": "^0.5.16",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "cli-progress": "^3.12.0",
    "commander": "^13.1.0",
    "ora": "^5.4.1",
    "simple-git": "^3.27.0",
    "tar": "^6.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/chalk": "^0.4.31",
    "@types/chokidar": "^1.7.5",
    "@types/cli-progress": "^3.11.6",
    "@types/commander": "^2.12.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.24.0",
    "jest": "^30.1.3",
    "pkg": "^5.8.1",
    "prettier": "3.5.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0"
  }
}
